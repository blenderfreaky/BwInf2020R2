<Window x:Class="Afg3Abbiegen.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Afg3Abbiegen.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="409*"/>
        </Grid.RowDefinitions>
        <local:ZoomBorder x:Name="border" ClipToBounds="True" Background="white" Grid.RowSpan="2">
            <Canvas x:Name="MapCanvas" Loaded="MapCanvas_Loaded"/>
        </local:ZoomBorder>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Grid.RowSpan="2" Margin="10,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Load Map" Click="LoadMap_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
